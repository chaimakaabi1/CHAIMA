{% extends 'base.html.twig' %}
{% block content %}
{% block title %}Cmnt index{% endblock %}

{% block body %}
    <h1>Cmnt index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Likes</th>
                <th>Dislikes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cmnt in cmnts %}
            <tr>
                <td>{{ cmnt.id }}</td>
                <td>{{ cmnt.content }}</td>
                <td>{{ cmnt.createdAt ? cmnt.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cmnt.updatedAt ? cmnt.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cmnt.likes }}</td>
                <td>{{ cmnt.dislikes }}</td>
                <td>
                    <a href="{{ path('app_cmnt_show', {'id': cmnt.id}) }}">show</a>
                    <a href="{{ path('app_cmnt_edit', {'id': cmnt.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cmnt_new') }}">Create new</a>
{% endblock %}
{% endblock %}
