{% extends 'base.html.twig' %}

{% block title %}New Reclamation{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h1 class="card-title">Create a New Reclamation</h1>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('app_reclamation_new') }}" novalidate>
                            {{ form_start(form) }}
                            {{ form_row(form.nom, { 'attr': {'class': 'form-control mb-3'} }) }}
                            {{ form_row(form.prenom, { 'attr': {'class': 'form-control mb-3'} }) }}
                            {{ form_row(form.email, { 'attr': {'class': 'form-control mb-3'} }) }}
                            {{ form_row(form.numeroMobile, { 'attr': {'class': 'form-control mb-3'} }) }}
                            {{ form_row(form.description, { 'attr': {'class': 'form-control mb-3'} }) }}
                            {{ form_row(form.objet, { 'attr': {'class': 'form-control mb-3'} }) }}
                            <button type="submit" class="btn btn-primary">Submit</button>
                            {{ form_end(form) }}
                        </form>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_reclamation_search') }}" class="btn btn-secondary">Voir mes r√©clamations</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
