{# templates/security/forgot_password.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h2>Forgot Password</h2>

    {# Display your forgot password form here, which includes an input for email #}
    <form method="post" action="{{ path('app_forgot_password') }}">
        {# Include the necessary form fields and CSRF token #}
        {{ form_row(form.email) }}
        {{ csrf_token('authenticate') }}
        <button type="submit">Reset Password</button>
    </form>
{% endblock %}
